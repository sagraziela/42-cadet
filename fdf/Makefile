# Name of the executable
NAME = fdf

# Compilation flags
CFLAGS = -Wall -Wextra -Werror
INCLUDES = ./includes

# Libft
PATH_LIBFT = ./libft/
LIBFT = $(addprefix $(PATH_LIBFT), libft.a)

# GNL
PATH_GNL = ./gnl/
GNL = $(addprefix $(PATH_GNL), gnl.a)

# MLX
MLX = ./MLX42/build/libmlx42.a
MLX_FLAGS = -IMLX42/include/MLX42 -ldl -lglfw -pthread -lm -Ofast -flto

# fdf
SRC = main.c \
		init.c \
		read_file.c \
		draw.c \
		draw_utils.c \
		controls.c \
		calc.c \

# Objects
OBJ_PATH = ./build/
OBJ = $(addprefix $(OBJ_PATH), $(SRC:.c=.o))

# Color codes of output on terminal
PURPLE = \033[1;35m
WHITE = \033[1;37m
CYAN= \033[0;36m

# Default target to compile the mandatory part
all: $(NAME)

# Builds dependencies
$(LIBFT):
	@make -C $(PATH_LIBFT)

$(GNL):
	@make -C $(PATH_GNL)

# Builds mandatory object files
$(OBJ_PATH)%.o:%.c
	@mkdir -p $(OBJ_PATH)
	$(CC) $(CFLAGS) -c $< -o $@ -I $(dir $@)

# Target to build the mandatory part
$(NAME): $(LIBFT) $(GNL) $(OBJ)
	@cp $(LIBFT) $(NAME)
	@cp $(GNL) $(NAME)
	$(CC) $(OBJ) $(LIBFT) $(GNL) $(MLX) -L$(PATH_LIBFT) -L$(PATH_GNL) -lft $(MLX_FLAGS) -o $(NAME)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The [$(CYAN)FDF$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

# Cleans object files and dependencies
clean:
	@rm -f $(OBJ)
	@rm -rf $(OBJ_PATH)
	@make clean -C $(PATH_LIBFT)
	@make clean -C $(PATH_GNL)
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)    Object files were cleaned!"
	@echo "$(WHITE)-----------------------------------"

# Cleans the executable file and pre-compiled header
fclean: clean
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)        Cleaning all... ðŸ§¹"
	@echo "$(WHITE)-----------------------------------"
	@rm -f $(NAME)
	@rm -f $(HD)*.gch
	@make fclean -C $(PATH_LIBFT)
	@make fclean -C $(PATH_GNL)
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)    âœ¨ Cleaning complete! âœ¨"
	@echo "$(WHITE)-----------------------------------"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all clean fclean re
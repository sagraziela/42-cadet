# Name of the executables
NAME_MC 	= client
NAME_MS 	= server
NAME_BC 	= client_bonus
NAME_BS		= server_bonus

# Compilation flags
CFLAGS = -Wall -Wextra -Werror -g3

# Libft
PATH_LIBFT = ./libft/
LIBFT = ./libft/libft.a
TEST_LIB = $(shell test -f ./libft/libft.a && echo "yes" 2>&1)

# MINITALK
PATH_MANDATORY	=	./src/mandatory/
CLIENT_M	=	$(addprefix $(PATH_M), client.c)
SERVER_M	=	$(addprefix $(PATH_M), server.c)

PATH_BONUS	=	./src/bonus/
CLIENT_B	=	$(addprefix $(PATH_B), client.c)
SERVER_B	=	$(addprefix $(PATH_B), server.c)
SRC_BONUS = ./src/bonus/main_bonus.c \

# Objects
CLIENT_M_O	=	$(addprefix $(PATH_MANDATORY), $(CLIENT_M:.c=.o))
SERVER_M_O	=	$(addprefix $(PATH_MANDATORY), $(SERVER_M:.c=.o))

CLIENT_B_O	=	$(CLIENT_B:%.c=%.o)
SERVER_B_O	= 	$(SERVER_B:%.c=%.o)

# Color codes of output on terminal
PURPLE = \033[1;35m
WHITE = \033[1;37m
CYAN = \033[0;36m

# Default target to compile the mandatory part
all: libft $(NAME_MC) $(NAME_MS)

# target to build deps
libft:
	@if ! [ $(TEST_LIB) ]; then echo "$(CYAN)-*- Creating libft library. -*-$(WHITE)";fi
	@make -C $(PATH_LIBFT) --no-print-directory

# Target to build the mandatory part
$(NAME_MC): $(LIBFT) $(CLIENT_M_O)
	@cp $(LIBFT) $(NAME_MC)
	$(CC) $(CFLAGS) $(CLIENT_M_O) $(LIBFT) -I $(PATH_MANDATORY) -L$(PATH_LIBFT) -o $(NAME_MC)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The [$(CYAN)MINITALK_CLIENT$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

$(NAME_MS): $(LIBFT) $(SERVER_M_O)
	@cp $(LIBFT) $(NAME_MS)
	$(CC) $(CFLAGS) $(SERVER_M_O) $(LIBFT) -I $(PATH_MANDATORY) -L$(PATH_LIBFT) -o $(NAME_MS)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The [$(CYAN)MINITALK_SERVER$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

# Target to build the bonus part
bonus: libft $(NAME_BC) $(NAME_BS)

$(NAME_BC): $(LIBFT) $(CLIENT_B_O)
	@cp $(LIBFT) $(NAME_BC)
	$(CC) $(CFLAGS) $(CLIENT_B_O) $(LIBFT) -I $(PATH_BONUS) -L$(PATH_LIBFT) -o $(NAME_MC)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The [$(CYAN)BONUS_MINITALK_CLIENT$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

$(NAME_BS): $(LIBFT) $(SERVER_B_O)
	@cp $(LIBFT) $(NAME_BS)
	$(CC) $(CFLAGS) $(SERVER_B_O) $(LIBFT) -I $(PATH_BONUS) -L$(PATH_LIBFT) -o $(NAME_MS)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The [$(CYAN)BONUS_MINITALK_SERVER$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

# Builds mandatory object files
$(PATH_MANDATORY)%.o: src/mandatory/%.c
	$(CC) $(CFLAGS) -c $< -o $@ -I $(dir $@)

# Builds bonus object files
$(PATH_BONUS)%.o: src/bonus/%.c
	$(CC) $(CFLAGS) -c $< -o $@ -I $(dir $@)

# Cleans object files and dependencies
clean:
	@rm -f $(CLIENT_M_O)
	@rm -f $(SERVER_M_O)
	@rm -f $(CLIENT_B_O)
	@rm -f $(SERVER_B_O)
	@make clean -C $(PATH_LIBFT)
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)    Object files were cleaned!"
	@echo "$(WHITE)-----------------------------------"

# Cleans the executable file and pre-compiled header
fclean: clean
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)        Cleaning all... ðŸ§¹"
	@echo "$(WHITE)-----------------------------------"
	@rm -f $(NAME_MC)
	@rm -f $(NAME_MS)
	@make clean -C $(LIBFT)
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)    âœ¨ Cleaning complete! âœ¨"
	@echo "$(WHITE)-----------------------------------"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all bonus clean fclean re libft
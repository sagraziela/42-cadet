# Name of the executable
NAME = cub

# Compilation flags
CFLAGS = -Wall -Wextra -Werror -g3
INCLUDES = -I ./includes/\
			-I ./minilibx-linux/

# Libft
PATH_LIBFT = ./libft/
LIBFT = $(addprefix $(PATH_LIBFT), libft.a)

# Minilibx
MLX_PATH	= ./minilibx-linux/
MLX_NAME	= libmlx.a
MLX			= $(MLX_PATH)$(MLX_NAME)

# cub3d
SRC = ./src/main.c \
		./src/parse.c \
		./src/clear.c

# Objects
OBJ_PATH = ./build/
OBJ = $(addprefix $(OBJ_PATH), $(notdir $(SRC:.c=.o)))
# OBJ_PATH_BONUS = ./build_bonus/
# OBJ_BONUS = $(addprefix $(OBJ_PATH_BONUS), $(notdir $(SRC_BONUS:.c=.o)))

# Color codes of output on terminal
GREEN = \e[1;32m
WHITE = \033[1;37m
CYAN= \033[0;36m
END = \033[0m

# Default target to compile the mandatory part
all: $(NAME)
	valgrind --leak-check=full --track-origins=yes ./cub ./maps/basic.cub

# Target to build the mandatory part
$(NAME): $(MLX) $(LIBFT) $(OBJ)
	$(CC) $(OBJ) $(LIBFT) $(MLX) -L$(PATH_LIBFT) -L$(MLX_PATH) -o $(NAME) -lXext -lX11 -lm
	@echo "$(GREEN)--------------------------------------------------$(END)"
	@echo "$(GREEN)The [$(CYAN)CUB-3D$(GREEN)] has been compiled! ðŸ¤ $(END)"
	@echo "$(GREEN)--------------------------------------------------$(END)"

# Builds dependencies
$(LIBFT):
	@make -C $(PATH_LIBFT)

$(MLX):
	make -C $(MLX_PATH)

# Builds mandatory object files
$(OBJ_PATH)%.o: ./src/%.c
	@mkdir -p $(OBJ_PATH)
	$(CC) -c $(CFLAGS) $< -o $@ $(INCLUDES)

# Cleans object files and dependencies
clean:
	@rm -f $(OBJ)
	@rm -rf $(OBJ_PATH)
	@make clean -C $(PATH_LIBFT)
#	@make clean -C $(MLX_PATH)
	@echo "$(WHITE)-----------------------------------$(END)"
	@echo "$(WHITE)    Object files were cleaned!$(END)"
	@echo "$(WHITE)-----------------------------------$(END)"

# Cleans the executable file and pre-compiled header
fclean: clean
	@echo "$(WHITE)-----------------------------------$(END)"
	@echo "$(WHITE)        Cleaning all... ðŸ§¹$(END)"
	@echo "$(WHITE)-----------------------------------$(END)"
	@rm -f $(NAME)
	@rm -f $(HD)*.gch
	@make fclean -C $(PATH_LIBFT)
	@echo "$(WHITE)-----------------------------------$(END)"
	@echo "$(WHITE)    âœ¨ Cleaning complete! âœ¨$(END)"
	@echo "$(WHITE)-----------------------------------$(END)"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all bonus clean fclean re
# Name of the executable
NAME = push_swap

# Compilation flags
CFLAGS = -Wall -Wextra -Werror -g3
INCLUDES = -I ./includes

# Libft
PATH_LIBFT = ./libft/
LIBFT = $(addprefix $(PATH_LIBFT), libft.a)

# push_swap
SRC = ./src/push_swap.c

# Objects
OBJ_PATH = ./build/
OBJ = $(addprefix $(OBJ_PATH), $(notdir $(SRC:.c=.o)))
# OBJ_PATH_BONUS = ./build_bonus/
# OBJ_BONUS = $(addprefix $(OBJ_PATH_BONUS), $(notdir $(SRC_BONUS:.c=.o)))

# Color codes of output on terminal
GREEN = \e[1;32m
WHITE = \033[1;37m
CYAN= \033[0;36m

# Default target to compile the mandatory part
all: $(NAME)

# Target to build the mandatory part
$(NAME): $(LIBFT) $(OBJ)
	@cp $(LIBFT) $(NAME)
	$(CC) $(OBJ) $(LIBFT) -L$(PATH_LIBFT) -o $(NAME)
	@echo "$(GREEN)--------------------------------------------------"
	@echo "$(GREEN)The [$(CYAN)PUSH_SWAP$(GREEN)] has been compiled! ðŸ¤ "
	@echo "$(GREEN)--------------------------------------------------"

# Target to build the bonus part
# bonus: $(LIBFT) $(OBJ_BONUS)
# 	@rm -f $(OBJ)
# 	@rm -rf $(OBJ_PATH)
# 	@cp $(LIBFT) $(NAME)
# 	@cp $(NAME)
# 	$(CC) $(OBJ_BONUS) $(LIBFT) -L$(PATH_LIBFT) -L$(PATH_GNL) -lft $(MLX_FLAGS) -o $(NAME)
# 	@echo "$(GREEN)--------------------------------------------------"
# 	@echo "$(GREEN)The [$(CYAN)FDF_BONUS$(GREEN)] has been compiled! ðŸ¤ "
# 	@echo "$(GREEN)--------------------------------------------------"

# Builds dependencies
$(LIBFT):
	@make -C $(PATH_LIBFT)

# Builds mandatory object files
$(OBJ_PATH)%.o: src/%.c
	@mkdir -p $(OBJ_PATH)
	$(CC) -c $(CFLAGS) $< -o $@ $(INCLUDES)

# Cleans object files and dependencies
clean:
	@rm -f $(OBJ)
	@rm -rf $(OBJ_PATH)
	@make clean -C $(PATH_LIBFT)
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)    Object files were cleaned!"
	@echo "$(WHITE)-----------------------------------"

# Cleans the executable file and pre-compiled header
fclean: clean
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)        Cleaning all... ðŸ§¹"
	@echo "$(WHITE)-----------------------------------"
	@rm -f $(NAME)
	@rm -f $(HD)*.gch
	@make fclean -C $(PATH_LIBFT)
	@echo "$(WHITE)-----------------------------------"
	@echo "$(WHITE)    âœ¨ Cleaning complete! âœ¨"
	@echo "$(WHITE)-----------------------------------"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all bonus clean fclean re
# Name of the executable
NAME = libftprintf.a

# Compilation flags
CC = cc -Wall -Wextra -Werror
AR = ar -rcs

# Libft
PATH_LIBFT = ./libft/
LIBFT = $(addprefix $(PATH_LIBFT), libft.a)

# ft_printf mandatory
MANDATORY_PATH = ./mandatory/
MANDATORY_SRC = ./mandatory/ft_printf.c
MANDATORY_OBJ = $(MANDATORY_SRC:%.c=%.o)
HD = ./mandatory/ft_printf.h
MANDATORY = ft_printf.o
MANDATORY_CHECK = $(shell ar -t $(NAME) $(MANDATORY) 2>&1)

# ft_printf_bonus
BONUS_PATH = ./bonus/
BONUS_SRC = ./bonus/ft_printf_bonus.c \
			./bonus/treat_flags.c
BONUS_OBJ = $(BONUS_SRC:%.c=%.o)
BONUS_HD = ./bonus/ft_printf_bonus.h
BONUS = bonus/ft_printf_bonus.o
BONUS_CHECK = $(shell ar -t $(NAME) $(BONUS) 2>&1)

# Color codes of output on terminal
PURPLE = \033[1;35m
WHITE = \033[1;37m
CYAN= \033[0;36m

# Default target to compile the mandatory part
ifneq ($(BONUS_CHECK), $(BONUS))
all: $(NAME)
endif

# Builds mandatory object files
$(MANDATORY_PATH)%.o:%.c
	@$(CC) -c $< -o $@ -I $(HD)

# Builds bonus object files
$(BONUS_PATH)%.o:%.c
	@$(CC) -c $< -o $@ -I $(BONUS_HD)

# Builds dependencies
$(LIBFT):
	@make -C $(PATH_LIBFT)

# Target to build the mandatory part
$(NAME): $(LIBFT) $(MANDATORY_OBJ)
	@cp $(LIBFT) $(NAME)
	@$(AR) $(NAME) $(MANDATORY_OBJ)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The Makefile of [$(CYAN)FT_PRINTF_MANDATORY$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

# Target to build the bonus part
bonus: $(LIBFT) $(BONUS_OBJ)
	@cp $(LIBFT) $(NAME)
	@$(AR) $(NAME) $(BONUS_OBJ)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The Makefile of [$(CYAN)FT_PRINTF_BONUS$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

# Cleans object files and dependencies
clean:
	@rm -f $(MANDATORY_OBJ)
	@rm -f $(BONUS_OBJ)

# Cleans the executable file and pre-compiled header
fclean: clean
	@echo "$(WHITE)--------------------------"
	@echo "$(WHITE)   Cleaning all... ðŸ§¹"
	@echo "$(WHITE)--------------------------"
	@make fclean -C $(PATH_LIBFT)
	@rm -f $(NAME)
	@rm -f $(HD)*.gch
	@echo "$(WHITE)--------------------------"
	@echo "$(WHITE)âœ¨ Cleaning complete! âœ¨"
	@echo "$(WHITE)--------------------------"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all clean fclean re bonus
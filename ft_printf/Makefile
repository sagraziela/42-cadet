# Name of the executable
NAME = libftprintf.a

# Compilation flags
CC = cc -Wall -Wextra -Werror
AR = ar -rcs

# Libft
PATH_LIBFT = ./libft/
LIBFT = $(addprefix $(PATH_LIBFT), libft.a)

# Printf mandatory
MANDATORY_BUILD = ./build_mandatory/
MANDATORY_SRC = ./ft_printf.c
MANDATORY_OBJ = $(addprefix $(MANDATORY_BUILD), $(MANDATORY_SRC:%.c=%.o))
HD = ./ft_printf.h

# Printf bonus
BONUS_BUILD = ./build_bonus/
BONUS_SRC = ./ft_printf_bonus.c
BONUS_OBJ = $(addprefix $(BONUS_BUILD), $(BONUS_SRC:%.c=%.o))
BONUS_HD = ./ft_printf_bonus.h

# Color codes of output on terminal
PURPLE = \033[1;35m
WHITE = \033[1;37m
CYAN= \033[0;36m

# Default target to compile the mandatory part
all: $(NAME)

# Builds mandatory object files
$(MANDATORY_BUILD)%.o:%.c
	@mkdir -p $(MANDATORY_BUILD)
	@$(CC) -I $(HD) -c $< -o $@

# Builds bonus object files
$(BONUS_BUILD)%.o:%.c
	@mkdir -p $(BONUS_BUILD)
	@$(CC) -I $(BONUS_HD) -c $< -o $@

# Builds dependencies
$(LIBFT):
	@make -C $(PATH_LIBFT)

# Target to build the mandatory part
$(NAME): $(LIBFT) $(MANDATORY_OBJ)
	@cp $(LIBFT) $(NAME)
	@$(AR) $(NAME) $(MANDATORY_OBJ)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The Makefile of [$(CYAN)FT_PRINTF_MANDATORY$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

# Target to build the bonus part
bonus: $(LIBFT) $(BONUS_OBJ)
	@cp $(LIBFT) $(NAME)
	@$(AR) $(NAME) $(BONUS_OBJ)
	@echo "$(PURPLE)--------------------------------------------------"
	@echo "$(PURPLE)The Makefile of [$(CYAN)FT_PRINTF_BONUS$(PURPLE)] has been compiled! ðŸ¤ "
	@echo "$(PURPLE)--------------------------------------------------"

# Cleans object files and dependencies
clean:
	@make clean -C $(PATH_LIBFT)
	ifeq ($(MANDATORY_BUILD))
		@rm -f $(MANDATORY_OBJ)
		@rmdir $(MANDATORY_BUILD)
	else ($(BONUS_BUILD))
		@rm -f $(BONUS_OBJ)
		@rmdir $(BONUS_BUILD)
	endif

# Cleans the executable file and pre-compiled header
fclean: clean
	@echo "$(WHITE)--------------------------"
	@echo "$(WHITE)   Cleaning all... ðŸ§¹"
	@echo "$(WHITE)--------------------------"
	@make fclean -C $(PATH_LIBFT)
	@rm -f $(NAME)
	@rm -f $(HD)*.gch
	@echo "$(WHITE)--------------------------"
	@echo "$(WHITE)âœ¨ Cleaning complete! âœ¨"
	@echo "$(WHITE)--------------------------"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all clean fclean re bonus